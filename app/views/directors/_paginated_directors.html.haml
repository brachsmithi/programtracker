.top_pager
  = will_paginate directors
.index-entries
  - directors.each do |dir|
    .index-entry
      .controls
        %span
          = link_to show_icon, director_path(dir, page: @page, search: @search), title: 'show'
        %span
          = link_to edit_icon, edit_director_path(dir, page: @page, search: @search), title: 'edit'
        %span
          = link_to destroy_icon, director_path(dir), method: :delete, title: 'destroy', class: 'caution', data: {confirm: "Delete #{dir.name}?"}
      .index-entry-details
        = capsule_director dir

.bottom_pager  
  = will_paginate directors