.top_pager
  = will_paginate directors

.index-entries
  - directors.each do |dir|
    .index-entry
      .controls
        %span
          = link_to "show", director_path(dir, page: @page)
        %span
          = link_to "edit", edit_director_path(dir, page: @page)
        %span.caution
          = link_to 'destroy', director_path(dir), method: :delete, data: {confirm: "Delete #{dir.name}?"}
      .index-entry-details
        = capsule_director dir

.bottom_pager  
  = will_paginate directors