%h1 Director

.director
  .name
    = @director.name
  .director_aliases
    = @director.director_aliases.map(&:name).join(', ')
  - if @director.programs.any?
    .programs
      .label
        = 'Program'.pluralize(@director.programs.count)
      - @director.programs.sort_by { |p| [p.year, p.title_sort_value] }.each do |p|
        .program
          = program_capsule_short p
          (#{link_to 'show', program_path(p)})

.footer-links
  = link_to "Director List", directors_url(page: @page), {class: 'btn btn-primary'}
  = link_to "Edit", edit_director_path(@director, page: @page), {class: 'btn btn-secondary'}