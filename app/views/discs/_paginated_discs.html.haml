.top_pager
  = will_paginate discs

.index-entries
  - discs.each do |disc|
    .index-entry
      .controls
        %span
          = link_to 'show', disc_path(disc, page: @page)
        %span
          = link_to 'edit', edit_disc_path(disc, page: @page)
        %span.caution
          = link_to 'destroy', disc_path(disc), method: :delete, data: {confirm: "Delete #{disc.display_name}?"}
      .index-entry-details
        = disc.display_name
        = "- #{disc.format}"
        = "(#{disc.location.name})"
        
.bottom_pager
  = will_paginate discs