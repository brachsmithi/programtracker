%h1 Location Index

.top-controls
  =link_to 'New Location', new_location_url, {class: 'btn btn-primary'}
  = form_tag(locations_path, id: 'search_form', method: :get, remote: true) do
    = text_field_tag :search, params[:search], placeholder: 'Enter search term', autofocus: true

#paginated-list
  = render partial: 'paginated_locations', locals: {locations: @locations}

#search-results