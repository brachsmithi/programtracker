%h1 Locations

.top-controls
  =link_to 'New Location', new_location_url, {class: 'btn btn-primary'}

.index-entries
  -@locations.each do |loc|
    .index-entry
      .controls
        %span
          = link_to "show", loc
        %span
          = link_to "edit", edit_location_path(loc)
      .index-entry-details
        = loc.name