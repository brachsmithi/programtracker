.modal-header
  %h5#myModalLabel.modal-title
    Select #{name}
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
    %span{"aria-hidden" => "true"} Ã—
.modal-body
  .search
    = text_field_tag 'select_search', nil, {'data-search-path': search_path.call('REPLACE'), id: 'select_search', onchange: 'loadSelector(this)'}
    = select_tag 'selected_id_value', options_for_select([]), {include_blank: '', class: 'hidden'}
.modal-footer
  %button.btn.btn-primary{ 'data-dismiss': 'modal', type: 'button', 'aria-hidden': 'true', onclick: "setSelected(#{@set_id}, #{@link_id})" }
    Set #{name}
  %button.btn.btn-secondary{ 'data-dismiss': 'modal', type: 'button', 'aria-hidden': 'true' }
    Close
