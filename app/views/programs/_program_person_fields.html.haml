.program-person-fields
  %span.form-group.space-left
    = f.hidden_field :person_id
    - d_id = form_tag_id(f.object_name, :person_id)
    - dl_id = "#{d_id}_link"
    %span{id: dl_id}
      - if f.object.person_id.nil?
        = link_to 'Select person', person_selector_path(dl_id, d_id),  {remote: true, 'data-toggle':  'modal', 'data-target': '#modal-window'}
      - else 
        = f.object.person.name
        %span.caution.space-left
          = link_to_remove_association destroy_icon, f, { wrapper_class: 'programs-person-fields' }