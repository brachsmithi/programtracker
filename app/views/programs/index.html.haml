%h1 Program Index

.top-controls
  = link_to 'New Program', new_program_url, {class: 'btn btn-primary'}
  = link_to 'Duplicates Report', reports_program_duplicates_path, {class: 'btn btn-secondary'}
  = link_to 'Unused Report', reports_program_unused_path, {class: 'btn btn-secondary'}
  = form_tag(programs_path, id: 'search_form', method: :get, remote: true) do
    = text_field_tag :search, params[:search], placeholder: 'Enter search term', autofocus: true

#paginated-list
  = render partial: 'paginated_programs', locals: {programs: @programs}

#search-results