%h1 Series

.series
  .name
    = @series.name
  - if @series.series_programs.any?
    .programs
      .label
        = 'Program'.pluralize(@series.series_programs.count)
      - @series.series_programs.sort_by {|sp| sp.safe_sequence}.each do |sp|
        .program
          = link_to capsule_series_program(sp), program_path(sp.program)
  - if @series.wrapper_series_series.any?
    .wrapper_series_series
      .label
        Part of Series
    - @series.wrapper_series_series.each do |wss|
      .wrapper_series
        = link_to wss.wrapper_series.name, series_path(wss.wrapper_series)
  - if @series.contained_series_series.any?
    .contained_series_series
      .label
        Contains Series
    - @series.contained_series_series.each do |css|
      .contained_series
        = link_to capsule_series_series(css), series_path(css.contained_series.id)

.footer-links
  = link_to "Series List", series_index_url(page: @page, search: @search), {class: 'btn btn-primary'}
  = link_to "Edit", edit_series_path(@series, page: @page, search: @search), {class: 'btn btn-secondary'}