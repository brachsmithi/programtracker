.top_pager
  = will_paginate series

.index-entries
  - series.each do |ser|
    .index-entry
      .controls
        %span
          = link_to show_icon, series_path(ser, page: @page, search: @search), title: 'show'
        %span
          = link_to edit_icon, edit_series_path(ser, page: @page, search: @search), title: 'edit'
        %span
          = link_to destroy_icon, series_path(ser), method: :delete,  class: 'caution', title: 'destroy', data: {confirm: "Delete #{ser.name}?"}
      .index-entry-details
        = ser.name

.bottom_pager
  = will_paginate series