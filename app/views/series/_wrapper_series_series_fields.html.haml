.series-series-fields
  %span.form-group.space-left
    = f.hidden_field :contained_series_id
    = f.hidden_field :wrapper_series_id
    - s_id = form_tag_id(f.object_name, :wrapper_series_id)
    - sl_id = "#{s_id}_link"
    %span{id: sl_id}
      - if f.object.wrapper_series_id.nil?
        = link_to 'Select series', series_selector_path(sl_id, s_id),  {remote: true, 'data-toggle':  'modal', 'data-target': '#modal-window'}
      - else 
        = f.object.wrapper_series.name