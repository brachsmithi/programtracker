%h1 Person Index

.top-controls
  = link_to 'New Person', new_person_url, {class: 'btn btn-primary'}
  = form_tag(persons_path, id: 'search_form', method: :get, remote: true) do
    = text_field_tag :search, params[:search], placeholder: 'Enter search term', autofocus: true

#paginated-list
  = render partial: 'paginated_persons', locals: {persons: @persons}

#search-results