  = link_to 'New Package', new_package_url, {class: 'btn btn-primary'}
  = form_tag(packages_path, method: :get, remote: true) do
    = text_field_tag :search, params[:search], placeholder: 'Enter search term'

#paginated-list
  = render partial: 'paginated_packages', locals: {packages: @packages}

