%h1 Packages

.top-controls
  = link_to 'New Package', new_package_url, {class: 'btn btn-primary'}

= will_paginate @packages

.index-entries
  - @packages.each do |pkg|
    .index-entry
      .controls
        %span
          = link_to "show", pkg
        %span
          = link_to "edit", edit_package_path(pkg)
      .index-entry-details
        = pkg.name 

= will_paginate @packages