%h1 Package Index

.top-controls
  = link_to 'New Package', new_package_url, {class: 'btn btn-primary'}
  = link_to 'No Discs Report', reports_package_no_discs_path, {class: 'btn btn-secondary'}
  = form_tag(packages_path, id: 'search_form', method: :get, remote: true) do
    = text_field_tag :search, params[:search], placeholder: 'Enter search term', autofocus: true

#paginated-list
  = render partial: 'paginated_packages', locals: {packages: @packages}

#search-results