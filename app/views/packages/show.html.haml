%h1 Package

.package
  .name
    = @package.name
  .discs
    - @package.disc_packages.each do |dp|
      .disc
        - unless dp.sequence.blank?
          %span.sequence
            = "#{dp.sequence} -"
        %span.format
          = dp.disc.format
        - unless dp.disc.name.blank?
          .disc_name
            = link_to dp.disc.name, disc_path(dp.disc)
        .programs
          = raw dp.disc.programs.map {|p| link_to capsule_program(p), program_path(p) }.join(', ')
  - if @package.series.any?
    .series
      .label
        Series
      .values
        = raw @package.series.map{|s| link_to s.name, series_path(s) }.join(', ')

.footer-links
  = link_to "Package List", packages_url(page: @page, search: @search), {class: 'btn btn-primary'}
  = link_to "Edit", edit_package_path(@package, page: @page, search: @search), {class: 'btn btn-secondary'}