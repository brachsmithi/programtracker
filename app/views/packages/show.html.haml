%h1 Package

.package
  .name
    = @package.name
  .discs
    - @package.disc_packages.each do |dp|
      .disc
        - unless dp.sequence.blank?
          %span.sequence
            = "#{dp.sequence} -"
        %span.format
          = dp.disc.format
        .programs
          = dp.disc.programs.map {|p| capsule_program p}.join(', ')

.footer-links
  = link_to "Package List", packages_url, {class: 'btn btn-primary'}
  = link_to "Edit", edit_package_path(@package), {class: 'btn btn-secondary'}