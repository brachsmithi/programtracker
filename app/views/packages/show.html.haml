%h1 Package

.package
  .name
    = @package.name
  .discs
    - @package.disc_packages.each do |dp|
      .disc
        - unless dp.sequence.blank?
          %span.sequence
            = "#{dp.sequence} -"
        %span.format
          = dp.disc.format
        .programs
          = dp.disc.programs.map {|p| capsule_program p}.join(', ')

.links
  =link_to "Packages", packages_url