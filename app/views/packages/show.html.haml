%h1 Package

.package
  .name
    = @package.name
  .discs
    - @package.disc_packages.each do |dp|
      .disc
        - unless dp.sequence.blank?
          %span.sequence
            = "#{dp.sequence} -"
        %span.format
          = dp.disc.format
        - unless dp.disc.name.blank?
          .disc_name
            = dp.disc.name
            = raw "(#{link_to 'show', disc_path(dp.disc)})"
        .programs
          = raw dp.disc.programs.map {|p| "#{capsule_program p} (#{link_to 'show', program_path(p)})"}.join(', ')

.footer-links
  = link_to "Package List", packages_url(page: @page), {class: 'btn btn-primary'}
  = link_to "Edit", edit_package_path(@package, page: @page), {class: 'btn btn-secondary'}