.top_pager
  = will_paginate packages

.index-entries
  - packages.each do |pkg|
    .index-entry
      .controls
        %span
          = link_to show_icon, package_path(pkg, page: @page, search: @search), title: 'show'
        %span
          = link_to edit_icon, edit_package_path(pkg, page: @page, search: @search), title: 'edit'
        %span
          = link_to destroy_icon, package_path(pkg), method: :delete, title: 'destroy',  class: 'caution', data: {confirm: "Delete #{pkg.name}?"}
      .index-entry-details
        = pkg.name 

.bottom_pager
  = will_paginate packages