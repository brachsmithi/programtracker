.top_pager
  = will_paginate packages

.index-entries
  - packages.each do |pkg|
    .index-entry
      .controls
        %span
          = link_to "show", package_path(pkg, page: @page)
        %span
          = link_to "edit", edit_package_path(pkg, page: @page)
        %span
          = link_to 'destroy', package_path(pkg), method: :delete,  class: 'caution', data: {confirm: "Delete #{pkg.name}?"}
      .index-entry-details
        = pkg.name 

.bottom_pager
  = will_paginate packages