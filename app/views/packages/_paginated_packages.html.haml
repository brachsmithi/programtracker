= will_paginate packages

.index-entries
  - packages.each do |pkg|
    .index-entry
      .controls
        %span
          = link_to "show", pkg
        %span
          = link_to "edit", edit_package_path(pkg)
        %span.caution
          = link_to 'destroy', package_path(pkg), method: :delete, data: {confirm: "Delete #{pkg.name}?"}
      .index-entry-details
        = pkg.name 

= will_paginate packages